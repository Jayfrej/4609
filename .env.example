# ==== UI Auth ====
BASIC_USER=admin
BASIC_PASS=change-me-please
# Force re-auth if idle (seconds)
BASIC_IDLE_TIMEOUT=900

# ==== Public URL & Webhook ====
WEBHOOK_TOKEN=replace-with-your-random-token
EXTERNAL_BASE_URL=http://127.0.0.1:5000

# ==== Flask Server ====
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
DEBUG=false

# ==== MT5 Paths (important) ====
MT5_MAIN_PATH=C:\Program Files\MetaTrader 5\terminal64.exe
MT5_INSTANCES_DIR=C:\MT5\instances
MT5_PROFILE_SOURCE=C:\Users\YourUser\AppData\Roaming\MetaQuotes\Terminal\<MAIN_DATA_FOLDER_ID>

# ==== Symbol fetch / mapping ====
SYMBOL_AUTO_FETCH=true
SYMBOL_MATCH_CUTOFF=0.65

# ==== Monitor ====
MONITOR_INTERVAL=10

# ==== SMTP (email alerts) ====
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=alerts@example.com
SMTP_TO=you@example.com
